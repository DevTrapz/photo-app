{
  "compilerOptions": {
    "jsx": "react-jsx",
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "declaration": true,
    "allowJs": true,
    "checkJs": false,
    "target": "ES6",
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*"
  ]
}